name: Workflow-CI-Model
conda_env: conda.yaml

# Jika Anda ingin mlflow membuat environment conda, hilangkan --no-conda saat memanggil mlflow run.
entry_points:
  main:
    parameters:
      data_path: {type: str, default: "namadataset_preprocessing/dataset.csv"}
      n_estimators: {type: int, default: 100}
      random_state: {type: int, default: 42}
      output: {type: str, default: "artifacts/model"}
    command: "python modelling.py --data_path {data_path} --n_estimators {n_estimators} --random_state {random_state} --output {output}"
